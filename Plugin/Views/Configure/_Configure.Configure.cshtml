@model ConfigurationModel
@using BitShift.Plugin.Payments.FirstData.Models;

<p>@T("BitShift.Plugin.FirstData.Notes")</p>
<p>@Html.ValidationSummary(false)</p>
<div class="content">
  <div class="form-horizontal">
    <div class="panel-group">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="form-group">
            <div class="col-md-2">
              <nop-label asp-for="SandboxURL" />
            </div>
            <div class="col-md-9">
              <nop-editor asp-for="SandboxURL" />
              <span asp-validation-for="SandboxURL"></span>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-2">
              <nop-label asp-for="ProductionURL" />
            </div>
            <div class="col-md-9">
              <nop-editor asp-for="ProductionURL" />
              <span asp-validation-for="ProductionURL"></span>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-2">
              <input type="submit" id="save" name="save" class="btn btn-info" value="@T("Admin.Common.Save")" />
            </div>
            <div class="col-md-9">
              <span style="color:@(Model.SavedSuccessfully ? "#009900" : "990000")">
                @Model.SaveMessage
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>