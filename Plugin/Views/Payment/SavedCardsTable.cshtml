@model IList<BitShift.Plugin.Payments.FirstData.Models.SavedCardModel>

@{
    Layout = "";
}
<table>
    @if (Model.Count > 0)
    {
        <tr>
            <th></th>
            <th class="type">@T("BitShift.Plugin.FirstData.SavedCards.Fields.Type")</th>
            <th class="name">@T("BitShift.Plugin.FirstData.SavedCards.Fields.Name")</th>
            <th class="number">@T("BitShift.Plugin.FirstData.SavedCards.Fields.Last4")</th>
            <th class="expires">@T("BitShift.Plugin.FirstData.SavedCards.Fields.Expires")</th>
        </tr>
        foreach (var card in Model)
        {
            <tr>
                <td class="deleteRow"><input type="button" class="delete" data-id="@card.Id" value="Delete" /></td>
                <td class="type">@card.CardType</td>
                <td class="name">@card.CardholderName</td>
                <td class="number">**********@card.Last4Digits</td>
                <td class="expires @(card.IsExpired ? "expired" : "")">@(card.ExpireMonth)/@(card.ExpireYear)</td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td>@T("BitShift.Plugin.FirstData.SavedCards.NoCards")</td>
        </tr>
    }
</table>