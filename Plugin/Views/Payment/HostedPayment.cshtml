@{
  Layout = "";
}
@model BitShift.Plugin.Payments.FirstData.Models.PaymentInfoModel

<form id="paymentForm" action="@Model.PaymentURL" method="post">
  <input type="hidden" name="x_login" value="@Model.PaymentPageID" />
  <input type="hidden" name="x_fp_sequence" value="@Model.ReferenceNumber" />
  <input type="hidden" name="x_fp_timestamp" value="@Model.Ticks" />
  <input type="hidden" name="x_amount" value="@Model.OrderAmount" />
  <input type="hidden" name="x_type" value="AUTH_ONLY" />
  <input type="hidden" name="x_fp_hash" value="@Model.HashCode" />
  <input type="hidden" name="x_currency_code" value="@Model.CurrencyCode" />
  <input type="hidden" name="x_show_form" value="PAYMENT_FORM" />
  <input type="hidden" name="x_address" value="@Model.Address1" />
  <input type="hidden" name="x_city" value="@Model.City" />
  <input type="hidden" name="x_state" value="@Model.State" />
  <input type="hidden" name="x_zip" value="@Model.Zip" />
  <input type="hidden" name="x_country" value="@Model.Country" />
  <input type="hidden" name="x_receipt_link_url" value="@Model.ResponseURL" />
  <input type="hidden" name="x_receipt_link_method" value="AUTO-POST" />
  <input type="hidden" name="x_cust_id" value="@Model.ReferenceNumber" />
</form>

<script type="text/javascript">
    $(document).ready(function () {
        $("#paymentForm").submit();
    });
</script>